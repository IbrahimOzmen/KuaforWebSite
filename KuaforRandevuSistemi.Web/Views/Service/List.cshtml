@model IEnumerable<KuaforRandevuSistemi.Core.Entities.Service>
@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="container">
    <h2>Hizmetlerimiz</h2>
    <div class="row">
        @foreach (var service in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@service.Name</h5>
                        <p class="card-text">
                            <strong>Fiyat:</strong> @service.Price.ToString("C")<br />
                            <strong>Süre:</strong> @service.Duration dakika
                        </p>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Appointment"
                               asp-action="Create"
                               asp-route-serviceId="@service.Id"
                               class="btn btn-primary">Randevu Al</a>
                        }
                        else
                        {
                            <a asp-controller="Account"
                               asp-action="Login"
                               class="btn btn-secondary">Randevu için Giriş Yapın</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>