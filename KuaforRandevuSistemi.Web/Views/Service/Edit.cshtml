@model KuaforRandevuSistemi.Core.Entities.Service

<h2>Hizmet Düzenle</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="SalonId" />

    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label">Hizmet Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Price" class="control-label">Ücret</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Duration" class="control-label">Süre (dk)</label>
        <input asp-for="Duration" class="form-control" type="number" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}