@model IEnumerable<KuaforRandevuSistemi.Core.Entities.Employee>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Randevu Al";
}

<h2>Randevu Al</h2>
<h4>Adım 2: Çalışan Seçimi</h4>

<div class="row">
    @foreach (var employee in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@employee.Name</h5>
                    <a asp-action="SelectDateTime"
                       asp-route-serviceId="@ViewBag.ServiceId"
                       asp-route-employeeId="@employee.Id"
                       class="btn btn-primary">Bu Çalışanı Seç</a>
                </div>
            </div>
        </div>
    }
</div>