@{
    ViewData["Title"] = "Dashboard";
}

<!-- Hero Slider -->
<div class="hero-section mb-4">
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide" style="background-image: url('/images/salon1.jpg')"></div>
            <div class="swiper-slide" style="background-image: url('/images/salon2.jpg')"></div>
            <div class="swiper-slide" style="background-image: url('/images/salon3.jpg')"></div>
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
</div>

<!-- İstatistik Kartları -->
<div class="container">
    <h2 class="text-white mb-4">Dashboard</h2>

    <div class="row">
        <!-- Toplam Çalışan -->
        <div class="col-md-4">
            <div class="stat-card blue">
                <h5>Toplam Çalışan</h5>
                <div class="stat-number">@ViewBag.EmployeeCount</div>
            </div>
        </div>

        <!-- Toplam Hizmet -->
        <div class="col-md-4">
            <div class="stat-card green">
                <h5>Toplam Hizmet</h5>
                <div class="stat-number">@ViewBag.ServiceCount</div>
            </div>
        </div>

        <!-- Bugünkü Randevular -->
        <div class="col-md-4">
            <div class="stat-card cyan">
                <h5>Bugünkü Randevular</h5>
                <div class="stat-number">@ViewBag.TodayAppointmentCount</div>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim Butonları -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="action-card">
                <a href="/Admin/Employees" class="btn btn-primary w-100">
                    <i class="fas fa-users mb-2 fa-2x"></i>
                    <h5>Çalışanları Yönet</h5>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="action-card">
                <a href="/Admin/Services" class="btn btn-success w-100">
                    <i class="fas fa-scissors mb-2 fa-2x"></i>
                    <h5>Hizmetleri Yönet</h5>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="action-card">
                <a href="/Admin/Appointments" class="btn btn-info w-100">
                    <i class="fas fa-calendar-alt mb-2 fa-2x"></i>
                    <h5>Randevuları Görüntüle</h5>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Slider başlatma
        var swiper = new Swiper('.swiper-container', {
            slidesPerView: 1,
            spaceBetween: 30,
            loop: true,
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    </script>
}