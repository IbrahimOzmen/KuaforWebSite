@model EmployeeServicesViewModel

<h2>@Model.EmployeeName için Hizmet Atamaları</h2>

<form asp-action="UpdateServices" method="post">
    <input type="hidden" name="employeeId" value="@Model.EmployeeId" />

    <div class="card">
        <div class="card-body">
            @foreach (var service in Model.Services)
            {
                <div class="form-check mb-2">
                    <input type="checkbox"
                           class="form-check-input"
                           id="service_@service.ServiceId"
                           name="selectedServices"
                           value="@service.ServiceId"
                    @(service.IsSelected ? "checked" : "")>
                    <label class="form-check-label" for="service_@service.ServiceId">
                        @service.ServiceName
                    </label>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>
        <a asp-controller="Admin" asp-action="Employees" class="btn btn-secondary">Geri Dön</a>
    </div>
</form>