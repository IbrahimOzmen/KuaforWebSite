@model KuaforRandevuSistemi.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
}

<!-- Hero Section with Slider -->
<div class="auth-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow mt-5">
                    <div class="card-header bg-primary text-white text-center py-3">
                        <h3>Kayıt Ol</h3>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Register" asp-controller="Account" method="post">
                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Email adresinizi giriniz" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Password" class="form-label">Şifre</label>
                                <input asp-for="Password" class="form-control" type="password" placeholder="Şifre oluşturunuz" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Şifrenizi tekrar giriniz" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                            </div>
                            <div class="text-center mt-3">
                                <p>Zaten hesabınız var mı? <a href="/Account/Login" class="text-primary">Giriş Yap</a></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<!-- İletişim ve Çalışma Saatleri -->
<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <h5>İletişim</h5>
            <p><i class="fas fa-phone me-2"></i>(555) 123-4567</p>
            <p><i class="fas fa-envelope me-2"></i>info@kuaforrandevu.com</p>
        </div>
        <div class="col-md-4">
            <h5>Çalışma Saatleri</h5>
            <p>Pazartesi - Pazar: 09:00 - 22:00</p>
        </div>
        <div class="col-md-4">
            <h5>Sosyal Medya</h5>
            <div class="social-icons">
                <a href="#" class="me-3"><i class="fab fa-facebook"></i></a>
                <a href="#" class="me-3"><i class="fab fa-instagram"></i></a>
                <a href="#" class="me-3"><i class="fab fa-twitter"></i></a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var swiper = new Swiper('.swiper-container', {
            effect: 'fade',
            autoplay: {
                delay: 4000,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            loop: true
        });
    </script>
}
}